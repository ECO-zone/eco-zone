{
  "cron": [
    {
      "command": "/app/bin/harvest.sh",
      "schedule": "@hourly"
    }
  ],
  "scripts": {
    "dokku": {
      "predeploy": "/app/bin/prerun.sh",
      "postdeploy": "/app/bin/postdeploy.sh"
    }
  },
  "healthchecks": {
    "web": [
      {
        "type": "startup",
        "name": "web check",
        "description": "Checking if the app responds to the home endpoint",
        "path": "/",
        "attempts": 3
      }
    ]
  }
}
